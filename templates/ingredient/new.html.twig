{% extends 'base.html.twig' %}

{% block title %}GourmetGlobe - Ajout d'un ingrédient{% endblock %}

{% block body %}

    {% include 'navbar.html.twig' %}

    <div class="max-w-screen-xl flex items-center justify-between mx-auto p-4">
        <h1 class="font-semibold text-3xl text-gray-900 dark:text-white leading-tight">Ajout d'un ingrédients</h1>
    </div>

    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                    <div class="sm:col-span-2">
                        {{ form_row(form.name) }}
                    </div>
                </div>
                <div class="flex justify-between">
                    <a href="{{ path('app_ingredient_index') }}" class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-red-700 rounded-lg focus:ring-4 focus:ring-red-300 dark:focus:ring-red-800 hover:bg-red-800">Retour à la liste</a>
                    <button type="submit" class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-800 hover:bg-blue-800">
                        Ajouter l'ingrédient
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
